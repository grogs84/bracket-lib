{
  "name": "bracket-lib",
  "private": true,
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": "20.x"
  },
  "volta": {
    "node": "20.16.0",
    "npm": "10.8.2"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "preinstall": "npx -y check-node-version --node 20 --npm 10",
    "bootstrap": "npm ci && npm run -ws build",
    "build": "npm run -ws build",
    "test": "npm run -ws test",
    "lint": "echo \"lint placeholder\"",
    "dev": "npm --prefix examples/react-vite run dev",
    "dev:example": "npm run -w react-vite-example dev",
    "dev:storybook": "concurrently -n core,storybook \"npm -w @mgi/bracket-core run watch\" \"npm -w @mgi/bracket-react run storybook\"",
    "preview": "npm --prefix examples/react-vite run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "check-node-version": "^4.2.1"
  }
}
