{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "composite": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mgi/bracket-core": ["packages/core/src/index.ts"],
      "@mgi/bracket-core/*": ["packages/core/src/*"]
    }
  }
}
